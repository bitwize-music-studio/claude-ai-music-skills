        "authentication": "predefinedCredentialType",
        "nodeCredentialType": "twitterOAuth2Api",
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={{ JSON.stringify({ total_bytes: $binary.media.bytes, media_type: $binary.media.mimeType, media_category: $binary.media.mimeType.startsWith('video') ? 'tweet_video' : $binary.media.mimeType === 'image/gif' ? 'tweet_gif' : 'tweet_image' }) }}",
        "options": {}
