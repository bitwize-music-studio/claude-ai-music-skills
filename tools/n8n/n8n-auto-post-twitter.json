    {
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT\n  tw.id,\n  tw.tweet_text,\n  tw.media_path,\n  tw.posted,\n  tw.enabled,\n  tw.times_posted,\n  tw.platform,\n  tw.content_type,\n  t.track_number,\n  t.title AS track_title,\n  a.title AS album_title,\n  a.slug AS album_slug,\n  a.genre,\n  a.soundcloud_url,\n  a.spotify_url,\n  a.apple_music_url,\n  a.amazon_music_url,\n  a.bandcamp_url,\n  a.youtube_url\nFROM tweets tw\nJOIN tracks t ON tw.track_id = t.id\nJOIN albums a ON t.album_id = a.id\nWHERE tw.enabled = TRUE\nORDER BY tw.times_posted ASC, random()",
        "options": {}
      },
      "id": "read-tweets",
      "name": "Read Enabled Tweets",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2.5,
      "position": [
        220,
        0
      ],
      "credentials": {
        "postgres": {
          "id": "<your-credential-id>",
          "name": "PostgreSQL Bitwizemusic"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "\nconst items = $input.all();\n\nif (items.length === 0) {\n  throw new Error('No enabled tweets found. Set at least one row to enabled=TRUE in the tweets table.');\n}\n\nlet minPosted = Infinity;\nfor (const item of items) {\n  const tp = parseInt(item.json.times_posted) || 0;\n  if (tp < minPosted) minPosted = tp;\n}\n\nconst candidates = items.filter(item => {\n  const tp = parseInt(item.json.times_posted) || 0;\n  return tp === minPosted;\n});\n\nconst randomIndex = Math.floor(Math.random() * candidates.length);\nconst selected = candidates[randomIndex];\n\nreturn [selected];\n"
      },
