    {
      "parameters": {
        "jsCode": "\nconst statusResponse = $input.first().json;\nconst statusData = statusResponse.data || statusResponse;\nconst procInfo = statusData.processing_info;\n\nif (procInfo && procInfo.state === 'failed') {\n  throw new Error('Media processing failed on X servers');\n}\n\nif (procInfo && (procInfo.state === 'pending' || procInfo.state === 'in_progress')) {\n  throw new Error('Media still processing after 30s. State: ' + procInfo.state + '. Try increasing wait time.');\n}\n\nreturn [{\n  json: {\n    media_id: $('Collect').first().json.media_id,\n    tweet_text: $('Pick Random').first().json.tweet_text\n  }\n}];\n"
      },
